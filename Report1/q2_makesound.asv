function y = q2_makesound(fs, pitch, tc)
t = 0:(1/fs):tc;
freq = 440*(2^(-0.75))*2^(pitch/12);
sound = sin(2*pi*freq*t);
%{
w1 = linspace(0, 1, 0.1*tc*fs);
w2 = linspace(1, 0.8, 0.08*tc*fs);
w3 = linspace(0.8, 0, 0.2*tc*fs);
st = size(t);
s1 = size(w1);
s2 = size(w2);
s3 = size(w3);
sc = st(2) - s1(2) - s2(2)- s3(2);
wc = linspace(0.8, 0.8, sc);
w = [w1 w2 wc w3];
%}
%{
c = 2.5;
env = sqrt(t).*exp(-c*(t/tc));

y = sound .* env;
end